@{
}
@model ProductInfo


<form action="/Products/Create" method="POST">    

    <h2>Информация о медицинском препарате</h2>
    <input type="hidden" asp-for="ID" />
    <div class="text text-danger">
        <div asp-validation-summary="All"></div>
    </div>
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="@(Model.ProductName)" type="text" class="form-control">
        <div class="text text-danger"><span asp-validation-for="ProductName"></span></div>
    </div>
    <div class="form-group">
        <label asp-for="ProductPrice"></label>
        <input asp-for="@(Model.ProductPrice)" type="text" class="form-control">
        <div class="text text-danger"><span asp-validation-for="ProductPrice"></span></div>
    </div>
    <div class="form-group">
        <label asp-for="ProductCount"></label>
        <input asp-for="@(Model.ProductCount)" type="text" class="form-control">
        <div class="text text-danger"><span asp-validation-for="ProductCount"></span></div>
    </div>
    <div align="right">
        <button class="btn btn-primary">Сохранить</button>
        <button class="btn btn-danger">Отменить</button>
    </div>
 
</form>